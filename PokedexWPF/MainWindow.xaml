<Window x:Class="PokedexWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PokedexWPF"
        mc:Ignorable="d"
        Title="PokédexPro" Height="450" Width="800">
    
    <Window.Resources>
        <Style TargetType="TextBlock">
            <Setter Property="FontFamily" Value="/PokedexWPF;component/Resources/Fonts/#Eight-Bit Madness"/>
            <Setter Property="FontSize" Value="15"></Setter>
            <Setter Property="Foreground" Value="#FF3A3A3A"></Setter>
        </Style>

        <Style TargetType="Button">
            <Setter Property="FontFamily" Value="/PokedexWPF;component/Resources/Fonts/#Eight-Bit Madness"/>
            <Setter Property="FontSize" Value="15"></Setter>
            <Setter Property="Foreground" Value="White"></Setter>
            <Setter Property="Background" Value="#FF3A3A3A"></Setter>
        </Style>

        <Style TargetType="TextBox">
            <Setter Property="FontFamily" Value="/PokedexWPF;component/Resources/Fonts/#Eight-Bit Madness"/>
            <Setter Property="FontSize" Value="25"></Setter>
            <Setter Property="Background" Value="#FF3A3A3A"/>
            <Setter Property="Foreground" Value="White"></Setter>
        </Style>

        <Style TargetType="ComboBox">
            <Setter Property="FontFamily" Value="/PokedexWPF;component/Resources/Fonts/#Eight-Bit Madness"/>
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="Background" Value="#FF3A3A3A"/>
            <Setter Property="Foreground" Value="#FF3A3A3A"/>
        </Style>

    </Window.Resources>
    
    <Grid>
        <Button Content="Search" Name="SearchButton" HorizontalAlignment="Left" Margin="79,95,0,0" VerticalAlignment="Top"/>
        <TextBlock HorizontalAlignment="Left" Margin="169,95,0,0" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top"/>

    </Grid>
</Window>
